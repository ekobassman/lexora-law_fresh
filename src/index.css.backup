@tailwind base;
@tailwind components;
@tailwind utilities;

/* LEXORA Premium Brand System - Private Legal Workspace */

@layer base {
  :root {
    /* Light theme (default) - for main content areas */
    /* Ivory background: #F6F4F1 */
    --background: 36 27% 95%;
    /* Navy text: #0B1C2D */
    --foreground: 209 61% 11%;

    /* White cards */
    --card: 0 0% 100%;
    --card-foreground: 209 61% 11%;

    /* White popovers */
    --popover: 0 0% 100%;
    --popover-foreground: 209 61% 11%;

    /* Primary: Navy #0B1C2D */
    --primary: 209 61% 11%;
    --primary-foreground: 0 0% 100%;

    /* Secondary: Light gray */
    --secondary: 36 15% 90%;
    --secondary-foreground: 209 61% 11%;

    /* Muted: Light ivory */
    --muted: 36 15% 92%;
    --muted-foreground: 209 30% 40%;

    /* Accent: Gold subtle */
    --accent: 43 40% 92%;
    --accent-foreground: 43 54% 40%;

    /* Destructive: Dark red */
    --destructive: 0 65% 45%;
    --destructive-foreground: 0 0% 100%;

    --border: 36 15% 85%;
    --input: 36 15% 85%;
    --ring: 43 54% 55%;

    --radius: 0.5rem;

    /* Success: Institutional green #1F6F5C */
    --success: 161 56% 28%;
    --success-foreground: 0 0% 100%;

    /* Warning: Gold #C9A24D */
    --warning: 43 54% 55%;
    --warning-foreground: 209 61% 11%;

    /* Sidebar */
    --sidebar-background: 209 61% 11%;
    --sidebar-foreground: 36 27% 95%;
    --sidebar-primary: 43 54% 55%;
    --sidebar-primary-foreground: 209 61% 11%;
    --sidebar-accent: 210 25% 16%;
    --sidebar-accent-foreground: 36 27% 95%;
    --sidebar-border: 210 25% 25%;
    --sidebar-ring: 43 54% 55%;

    /* Lexora Custom Tokens */
    --navy: 209 61% 11%;
    --graphite: 210 25% 16%;
    --ivory: 36 27% 95%;
    --gold: 43 54% 55%;
    --green: 161 56% 28%;
  }

  .dark {
    --background: 209 61% 11%;
    --foreground: 36 27% 95%;

    --card: 210 25% 16%;
    --card-foreground: 36 27% 95%;

    --popover: 210 25% 16%;
    --popover-foreground: 36 27% 95%;

    --primary: 43 54% 55%;
    --primary-foreground: 209 61% 11%;

    --secondary: 210 25% 20%;
    --secondary-foreground: 36 27% 95%;

    --muted: 210 25% 20%;
    --muted-foreground: 36 27% 70%;

    --accent: 43 54% 20%;
    --accent-foreground: 43 54% 55%;

    --destructive: 0 50% 35%;
    --destructive-foreground: 36 27% 95%;

    --border: 210 25% 25%;
    --input: 210 25% 20%;
    --ring: 43 54% 55%;
  }
}

@layer base {
  * {
    @apply border-border;
  }

  html, body {
    @apply overflow-x-hidden;
  }

  body {
    @apply bg-background text-foreground antialiased;
    font-family: 'Inter', system-ui, sans-serif;
  }

  /* Premium heading typography */
  h1, h2, h3, .font-display {
    font-family: 'Playfair Display', Georgia, serif;
    letter-spacing: 0.02em;
  }

  /* RTL support for Arabic */
  [dir="rtl"] {
    text-align: right;
  }

  [dir="rtl"] .rtl\:space-x-reverse > :not([hidden]) ~ :not([hidden]) {
    --tw-space-x-reverse: 1;
  }
}

@layer components {
  /* Premium card with shadow - raised effect */
  .card-premium {
    @apply bg-white rounded-xl shadow-[0_2px_15px_-3px_rgba(11,28,45,0.07),0_10px_20px_-2px_rgba(11,28,45,0.04)] border border-border/50;
  }
  
  /* Navy header section */
  .section-navy {
    @apply bg-navy text-ivory;
  }
  
  /* Ivory content section */
  .section-ivory {
    @apply bg-ivory;
  }
}

@layer utilities {
  .text-balance {
    text-wrap: balance;
  }
  
  /* Safe area for notched devices (PWA standalone / iPhone notch) */
  .safe-area-top {
    padding-top: env(safe-area-inset-top, 0px);
  }
  .safe-area-bottom {
    padding-bottom: env(safe-area-inset-bottom, 0px);
  }

  /* Premium text gradient */
  .text-gold-gradient {
    background: linear-gradient(135deg, hsl(43 54% 55%), hsl(43 54% 70%));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Premium shadow for cards */
  .shadow-premium {
    box-shadow: 0 2px 15px -3px rgba(11, 28, 45, 0.07), 0 10px 20px -2px rgba(11, 28, 45, 0.04);
  }
  
  /* Inset shadow for content boxes */
  .shadow-inset {
    box-shadow: inset 0 2px 4px 0 rgba(11, 28, 45, 0.06);
  }
}

/* Print styles - DIN 5008 German business letter format */

/* Keep print template out of the normal layout */
.print-letter {
  display: none;
}

@media print {
  /* Demo Chat: letter-only print mode (scoped so other print flows aren't affected) */
  body.print-letter-only-mode * {
    visibility: hidden !important;
  }

  body.print-letter-only-mode #print-letter-only,
  body.print-letter-only-mode #print-letter-only * {
    visibility: visible !important;
  }

  body.print-letter-only-mode #print-letter-only {
    position: absolute !important;
    left: 0 !important;
    top: 0 !important;
    width: 100% !important;
    padding: 2.5cm !important;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif !important;
    font-size: 11pt !important;
    line-height: 1.5 !important;
    color: black !important;
    background: white !important;
    box-sizing: border-box !important;
  }

  * {
    -webkit-print-color-adjust: exact !important;
    print-color-adjust: exact !important;
  }
  
  /* Hide everything by default */
  html, body {
    width: 210mm !important;
    height: auto !important;
    margin: 0 !important;
    padding: 0 !important;
    background: white !important;
    overflow: visible !important;
  }
  
  /* Hide all UI elements */
  header,
  nav,
  footer,
  aside,
  button,
  .no-print,
  .print\:hidden,
  [class*="print:hidden"],
  [data-sonner-toaster],
  [role="dialog"],
  [role="alertdialog"] {
    display: none !important;
    visibility: hidden !important;
    height: 0 !important;
    width: 0 !important;
    overflow: hidden !important;
  }
  
  /* Hide the app root entirely (print template is portaled to <body>) */
  #root {
    display: none !important;
  }
  
  /* Show only print-letter and its contents */
  .print-letter {
    display: block !important;
    visibility: visible !important;
    position: static !important;
    left: 0 !important;
    top: 0 !important;
    width: 210mm !important;
    min-height: 297mm !important;
    margin: 0 !important;
    padding: 0 !important;
    background: white !important;
    z-index: 999999 !important;
    page-break-inside: auto !important;
    overflow: visible !important;
  }
  
  .print-letter *,
  .print-letter .din5008-letter,
  .print-letter .din5008-letter * {
    visibility: visible !important;
  }
  
  .din5008-letter {
    font-family: 'Times New Roman', Times, serif !important;
    font-size: 11pt !important;
    line-height: 1.5 !important;
    color: black !important;
    padding: 27mm 20mm 25mm 25mm !important;
    width: 210mm !important;
    min-height: auto !important;
    max-width: 210mm !important;
    box-sizing: border-box !important;
    background: white !important;
    page-break-inside: auto !important;
    overflow: visible !important;
  }
  
  .din5008-letter .recipient {
    font-size: 11pt !important;
    margin-top: 5mm !important;
    margin-bottom: 15mm !important;
    min-height: 27.3mm !important;
  }
  
  .din5008-letter .date-line {
    text-align: right !important;
    margin-bottom: 10mm !important;
  }
  
  .din5008-letter .reference {
    font-size: 10pt !important;
    margin-bottom: 3mm !important;
  }
  
  .din5008-letter .subject {
    font-weight: bold !important;
    margin-bottom: 10mm !important;
  }
  
  .din5008-letter .letter-body {
    margin-top: 5mm !important;
  }
  
  .din5008-letter .letter-body p {
    margin: 0 !important;
    padding: 0 !important;
    min-height: 1.5em !important;
    page-break-inside: avoid !important;
  }
  
  .din5008-letter::after {
    content: none !important;
  }
  
  @page {
    size: A4 portrait;
    margin: 0;
  }
  
  @page :first {
    margin: 0;
  }
}

/* Legal Scale Balance Animation - More visible oscillation + pulse */
@keyframes balance {
  0%, 100% {
    transform: rotate(-8deg) scale(1);
  }
  25% {
    transform: rotate(0deg) scale(1.05);
  }
  50% {
    transform: rotate(8deg) scale(1);
  }
  75% {
    transform: rotate(0deg) scale(1.05);
  }
}

@keyframes balance-glow {
  0%, 100% {
    filter: drop-shadow(0 0 4px hsl(var(--gold) / 0.3));
  }
  50% {
    filter: drop-shadow(0 0 12px hsl(var(--gold) / 0.6));
  }
}

.animate-balance {
  animation: balance 1.5s ease-in-out infinite, balance-glow 1.5s ease-in-out infinite;
  transform-origin: center 30%;
}

/* LegalLoader beam: continuous wave (no center stop), kept slightly higher */
@keyframes legal-beam-wave {
  from { transform: rotate(12deg); }
  to { transform: rotate(-12deg); }
}

.legal-loader-beam {
  transform-box: view-box;
  transform-origin: 32px 16px;
  animation: legal-beam-wave 3.2s ease-in-out infinite alternate;
  will-change: transform;
}

/* Marquee Animation for Blitzer Banner */
@keyframes marquee {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-50%);
  }
}

.animate-marquee {
  animation: marquee 35s linear infinite;
  display: flex;
  width: max-content;
}

.animate-marquee:hover {
  animation-play-state: paused;
}

/* Slide-up animation (e.g. bottom sheets, modals) */
@keyframes slide-up {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.animate-slide-up {
  animation: slide-up 0.3s ease-out;
}